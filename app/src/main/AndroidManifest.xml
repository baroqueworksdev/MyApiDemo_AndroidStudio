<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="jp.baroqueworksdev.myapidemo"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk
            android:minSdkVersion="14"
            android:targetSdkVersion="19"/>

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        <activity
                android:name="jp.baroqueworksdev.myapidemo.MyApiDemosActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="jp.baroqueworksdev.myapidemo.activity.SampleFragmentActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>

        <!-- ************************************* -->
        <!-- APPLICATION PACKAGE SAMPLES -->
        <!-- ************************************* -->


        <!-- Activity Samples -->

        <activity
                android:name="jp.baroqueworksdev.myapidemo.activity.SlidePanelSampleActivity"
                android:label="@string/activity_slide_panel">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.SAMPLE_CODE"/>
            </intent-filter>
        </activity>
        <activity
                android:name="jp.baroqueworksdev.myapidemo.activity.SampleDialogFragmentActivity"
                android:label="@string/activity_dialog_fragment">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.SAMPLE_CODE"/>
            </intent-filter>
        </activity>
        <activity
                android:name="jp.baroqueworksdev.myapidemo.activity.DrawerLayoutActivity"
                android:label="@string/activity_drawerlayout">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.SAMPLE_CODE"/>
            </intent-filter>
        </activity>
        <activity
                android:name="jp.baroqueworksdev.myapidemo.activity.SwipeRefreshLayoutActivity"
                android:label="@string/activity_swiperefreshlayout">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.SAMPLE_CODE"/>
            </intent-filter>
        </activity>
    </application>

</manifest>